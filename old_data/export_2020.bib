@inproceedings{PUB00064310,
   note = {Communication scientifique sans actes},
   author = {Ginelli, L. and Candau, J.},
   title = {Eprouver des inégalités environnementales par la recherche-action. Le cas des capabilités des travailleurs viticoles à dire leur exposition aux pesticides},
   bookTitle = {Journée d'étude : L'objet "Pesticides" en sciences humaines et sociales. Quels savoirs pour quelle transition écologique ?, 06/02/2020-07/02/2020, Marseille, FRA},
   url = {http://irsteadoc.irstea.fr/cemoa/PUB00064310},
   year = {2020},
   affiliation = {INRAE BORDEAUX UR ETBX FRA ; INRAE BORDEAUX UR ETBX FRA},
   abstract = {En France, la mise en débat public de l'usage des pesticides a été tardive et demeure encore peu accessible aux travailleurs agricoles alors même qu'un changement de pratiques de leur part est attendu et qu'ils sont fortement exposés aux produits de par leur activité professionnelle. Cette configuration de la « transition » relative aux pesticides soulève simultanément des enjeux sanitaires, environnementaux et de justice sociale, renouant avec certains mouvements sociaux à l'international, qu'il s'agisse de l'Environmental Justice aux États-Unis (Taylor, 2000) ou de mobilisations dans les pays du Sud nommées « écologisme des pauvres » par Martinez-Alier (2014). Le concept d'inégalités environnementales (Deldrève et Candau, 2014 ; Deldrève, 2015) permet de (re)penser ensemble ces enjeux dans l'analyse de la transition (Larrère et Larrère, 2016). Nous analysons comme telles les inégalités de participation de populations exposées à un risque (Deldrève, 2015), ici les travailleurs agricoles utilisateurs de pesticides, en faisant l'hypothèse que leur voix peu audible dans l'espace public est le signe de capabilités entravées (Sen 2000, de Munk 2008). Qu'ils soient salariés ou agriculteurs participant aux travaux, notre recherche vise donc à identifier les processus sociaux qui renforcent ou fragilisent leurs capabilités à dire leurs préoccupations relatives aux pesticides},
   keywords = {INEGALITE ENVIRONNEMENTALE ; PESTICIDE ; CONDITIONS DE TRAVAIL ; VITICULTURE ; PRATIQUE AGRICOLE}
   keywords = {environmental inequality ; pesticides ; viticulture ; agricultural practices}
}

@book{PUB00064317,
   note = {Chapitre d'ouvrage scientifique},
   author = {Ginelli, L.},
   author = {Machemehl, C. and Sirost, O. and Ducrotoy, J.P.},
   title = {Outdoor leisure activities at odds with the city ? Arcachon bay and the Massif des Calanques },
   bookTitle = {Reclaiming and rewilding river cities for outdoor recreation},
   url = {http://irsteadoc.irstea.fr/cemoa/PUB00064317},
   year = {2020},
   affiliation = {INRAE BORDEAUX UR ETBX FRA},
   abstract = {Différents par leur histoire, leurs publics et leurs techniques, les loisirs de nature pratiqués dans deux « hauts lieux de nature » - le bassin d'Arcachon et les Calanques de Marseille- situés aux portes des villes sont actuellement travaillés par des processus analogues. À la faveur de la coupure séculaire entre ville et nature, l'opposition avec les temps sociaux contraints, par définition valable pour tous les loisirs, est redoublée dans le cas des loisirs de nature par une opposition spatiale. Se dessine alors pour ces usagers une « double frontière » entre des espaces-temps urbains du quotidien et des activités libératoires accomplies dans des environnements « naturalisés ». Elle constitue un puissant cadre des expériences socio-environnementales associées loisirs de nature, mais elle n'est pas immuable. Les usagers sont fréquemment « troublés » par des décalages entre leur imaginaire de la pleine nature et l'expérience d'un environnement perméable aux influences de la ville et de ses enjeux environnementaux (pollutions, changement climatique...) mais aussi sociaux (accès du public aux espaces naturels, gouvernance, traitements équitables...). Ce trouble augurerait-il la réinvention des relations ville-nature ? La réponse doit être nuancée.},
   keywords = {LOISIR ; VILLE ; USAGER ; ENVIRONNEMENT}
   keywords = {recreation ; towns ; user ; environment}
}

@article{PUB00064427,
   note = {Article de revue scientifique à comité de lecture},
   author = {Carayon, D. and Eulin Garrigue, A. and Vigouroux, R. and Delmas, F.},
   title = {A new multimetric index for the evaluation of water ecological quality of French Guiana streams based on benthic diatoms},
   journal = {Ecological Indicators},
   volume = {113},
   pages = {10},
   url = {http://irsteadoc.irstea.fr/cemoa/PUB00064427 / https://www.sciencedirect.com/science/article/pii/S1470160X20301850?dgcid=author},
   doi = {http://dx.doi.org/10.1016/j.ecolind.2020.106248},
   year = {2020},
   affiliation = {IRSTEA BORDEAUX UR EABX FRA ; HYDRECO GUYANE FRA ; HYDRECO GUYANE FRA ; IRSTEA BORDEAUX UR EABX FRA},
   abstract = {The Water Framework Directive (WFD) requires European Union Member States to monitor the ecological quality of their water bodies through the responses of key biological compartments to anthropogenic alteration in the aquatic environment. French Guiana is a French overseas department located in the Amazonian part of South America. Despite its geographical remoteness, this department is a European territory like all the other French overseas departments and is therefore subjected to the requirements of the WFD. Previous work over the past decade, especially on benthic diatoms, have led to the development of several new biological indices specifically adapted to the biogeographic conditions (geological substrates, climate, local fauna and flora) of each of these overseas territories. However, work has progressed at a slower rate on the diatoms of French Guiana, due to the particular natural conditions that lead to very specific and still largely unknown diatomic communities.  Since no convenient local system was available, an evaluation system based on a local adaptation of a generalist diatom index (SPI) has been previously set up to assess the ecological state of French Guiana's watercourses, despite obvious weaknesses linked to the biogeographical mismatch of the ecological profiles of many taxa. The increase in the quantity of data gathered through Guyanese monitoring networks over the past 9 years, as well as the progress made on diatom taxonomy, allowed the development of the new French Guiana Diatomic Index (FGDI) presented in this paper. A methodology adapted to the Guyanese context has been developed based on (i) a reduction in the number of taxa taken into account in diatom communities and on (ii) the search for alert taxa in a multimetric approach. The FGDI allows a relevant and consistent ecological status evaluation of French Guiana's streams based on benthic diatoms following the WFD framework and, due to its multimetric construction, it also allows a comprehensive ecological diagnosis which will be of great benefit for water managers.},
   keywords = {DIATOMEE ; INDICATEUR BIOLOGIQUE ; COURS D'EAU}
   keywords = {diatom ; biological indicators ; rivers}
}

@article{PUB00064428,
   note = {Article de revue scientifique à comité de lecture},
   author = {Lawrence, A. and Deuffic, P. and Hujala, T. and Nichiforel, L. and Feliciano, D. and Jodlowski, K. and Lind, T. and Marchal, D. and Talkkari, A. and Teder, M. and Vilkriste, L.},
   title = {Extension, advice and knowledge systems for private forestry: Understanding diversity and change across Europe},
   journal = {Land Use Policy},
   volume = {94},
   pages = {104522-},
   url = {http://irsteadoc.irstea.fr/cemoa/PUB00064428 / https://www.sciencedirect.com/science/article/pii/S0264837719306726?via%3Dihub},
   doi = {http://dx.doi.org/10.1016/j.landusepol.2020.104522},
   year = {2020},
   affiliation = {UNIVERSITY OF THE HIGHLANDS AND ISLANDS PERTH GBR ; IRSTEA BORDEAUX UR ETBX FRA ; UNIVERSITY OF EASTERN FINLAND JOENSUU FIN ; UNIVERSITY STEFAN CEL MARE SUCEAVA ROM ; UNIVERSITY OF ABERDEEN GBR ; FOREST RESEARCH INSTITUTE POL ; SWEDISH UNIVERSITY OF AGRICULTURAL SCIENCES SWE ; WILDLIFE AND FORESTRY DEPARTMENT BEL ; KARELIA UNIVERSITY OF APPLIED SCIENCES FIN ; ESTONIAN UNIVERSITY OF LIFE SCIENCES TARTU EST ; LATVIA UNIVERSITY OF LIFE SCIENCES AND TECHNOLOGIES LVA},
   abstract = {The decisions and actions of private forest owners are important for the delivery of forest goods and services. Both forest ownership, and policies related to forest owners, are changing. Traditionally in most countries, government extension oﬃcers have advised and instructed forest owners, but this is evolving, with greater importance given to a range of actors, objectives, and knowledge types. Drawing on literature and mixed data from 10 countries in Europe, this paper explores how forestry advisory systems can be conceptualized, and describes their current situation in Europe. Drawing parallels with the concept of AKIS (Agricultural Knowledge and Information Systems), we propose the term FOKIS (FOrestry Knowledge and Information Systems), as both a system (a purposeful and interdependent group of bodies) and a method for understanding such systems. We deﬁne four dimensions for describing FOKIS: owners, policy goals, advice providers, and tools. We ﬁnd diﬀerent roles for extension in countries with centrally controlled, highly regulated forest management, and advisors in regions where forest owners have more freedom to choose how to manage their forest. We ﬁnd ﬁve trends across Europe: increasing ﬂexibility, openness and participation of owners as sources of information; increasing reliance on information and persuasion rather than enforced compliance; a shift of attention from timber to a wider range of ecosystem services such as biodiversity and recreation; a shift of funding and providers from public to private sector; emergence of new virtual communication tools. The approach provides a way to make sense of comparisons and change in FOKIS, and opens up an important research ﬁeld.},
   keywords = {FORET PRIVEE ; EDUCATION ; INFORMATION ; COMMUNICATION ; POLITIQUE PUBLIQUE}
   keywords = {private forest ; education ; information ; communication ; public policy}
}

@article{PUB00064441,
   note = {Article de revue scientifique à comité de lecture},
   author = {Ginelli, L. and Candau, J. and Girard, S. and Houdart, S. and Deldrève, V.},
   title = {Écologisation des pratiques et territorialisation des activités : une introduction },
   journal = {Développement durable et territoires},
   url = {http://irsteadoc.irstea.fr/cemoa/PUB00064441 / https://journals.openedition.org/developpementdurable/},
   year = {2020},
   affiliation = {INRAE BORDEAUX UR ETBX FRA ; INRAE BORDEAUX UR ETBX FRA ; INRAE GRENOBLE UR LESSEM FRA  ; INRAE CLERMONT FERRAND UMR TERRITOIRES FRA ; INRAE BORDEAUX UR ETBX FRA},
   abstract = {This article is an introduction to the special section "Ecologization of practices and territorialization of activities". Considering the implicit proximity between the two processes, we propose a definition of ecologization and territorialisation to which the authors of the fourteen contributions to this special section refer. They demonstrate that ecologization and territorialization can split, or almost operate without each other, and that their merging is always a construction. Finally, original categories of analysis are added to those anticipated (play of stakeholders, narratives, materialities, etc.) to question the promises of merging between ecologization and territorialization. The frame analysis reveals its relevance, by underlining established compromises, conflicts of norms and values between stakeholders of the territories but also their structural backgrounds. / Le présent article constitue une introduction au dossier thématique « Écologisation des pratiques et territorialisation des activités ». Partant du constat d'une proximité implicite entre les deux processus, nous proposons une définition de l'écologisation et de la territorialisation, définitions sur lesquelles s'appuient les auteurs des quatorze contributions à ce dossier. Ces dernières montrent que l'écologisation et la territorialisation peuvent diverger, ou opérer presque l'une sans l'autre. Elles montrent également que leur rencontre est toujours construite. Finalement, des catégories d'analyse originales s'ajoutent à celles pressenties par les coordinateurs de ce dossier (jeux d'acteurs et mise en récits, matérialités, etc.) pour interroger les promesses de synergie entre écologisation et territorialisation. L'analyse en termes de cadrage des problèmes révèle ainsi sa pertinence, en éclairant les compromis établis, les conflits de normes et de valeurs entre acteurs des territoires mais aussi leurs arrière-plans structurels. },
   keywords = {ECOLOGIE ; TERRITOIRE ; ACTEUR LOCAL ; ENERGIE ; AGRICULTURE}
   keywords = {ecology ; territory ; local actor ; energy ; agriculture}
}

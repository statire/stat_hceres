@book{PUB00064163,
   note = {Chapitre d'ouvrage scientifique},
   author = {Carter, C.A. and Berthet, E. and Boschet, C. and Bouleau, G. and Bretagnolle, V. and Candau, J. and Cazals, C. and Conchon, P. and Dachary Bernard, J. and De Godoy Leski, C. and Deldrève, V. and Deuffic, P. and Doyen, L. and Lafon, S. and Macary, F. and Rambonilaza, T. and Sahraoui, Y. and Salles, D. and Sergent, A. and Smith, A. and Thomas, A.},
   author = {Bretagnolle, V. },
   title = {La gouvernance de la biodiversité en Nouvelle-Aquitaine : enjeux et défis},
   bookTitle = {Rapport Ecobiose},
   pages = {1-34},
   url = {http://irsteadoc.irstea.fr/cemoa/PUB00064163 / https://www.ecobiose.fr/rapport/},
   year = {2020},
   affiliation = {INRAE BORDEAUX UR ETBX FRA ;  INRAE UMR SADAPT FRA ; INRAE BORDEAUX UR ETBX FRA ; INRAE BORDEAUX UR ETBX FRA ; CNRS CHIZE FRA ; INRAE BORDEAUX UR ETBX FRA ; INRAE BORDEAUX UR ETBX FRA ; INRAE BORDEAUX UR ETBX FRA ; INRAE BORDEAUX UR ETBX FRA ; INRAE BORDEAUX UR ETBX FRA ; INRAE BORDEAUX UR ETBX FRA ; INRAE BORDEAUX UR ETBX FRA ; UNIVERSITE DE BORDEAUX GRETHA FRA ; INRAE BORDEAUX UR ETBX FRA ; INRAE BORDEAUX UR ETBX FRA ; INRAE BORDEAUX UR ETBX FRA ; INRAE UMR BIOGECO BORDEAUX FRA ; INRAE BORDEAUX UR ETBX FRA ; INRAE BORDEAUX UR ETBX FRA ; CENTRE EMILE DURKHEIM BORDEAUX FRA ; INRAE BORDEAUX UR ETBX FRA},
   abstract = {This chapter presents a summary of scientific results on the governance of biodiversity in socio-ecosystems in the French region of New Aquitaine (cereal plains, forest and wood, vine and wine, fresh and marine water, urbanised territories: see Ecobiose General Report https://www.ecobiose.fr/rapport/). The central governance question turns on the reconciliation and, in some cases, the integration of the governance of the conservation of biodiversity with the governance of production (food, energy, wood...) - public policies which traditionally have been set independently of one another, supported by different groups of actors and instruments. Following a brief presentation of the international and national context for the governing of each socio-ecosystem, this scientific assessment allowed us to identify two main ways of governing the convergence of objectives and institutions: i) a 'reformist' form of goverance within which sector public policy instruments are adapted to biodiversity issues but without challenging dominant logics of action; ii) a 'transformative' form of governance supporting the implementation of 'ecosystem approaches'. This second form of holistic governance was seen to result either from 'bottom up' or 'top down' governing approaches depending on the socio-ecosytem concerned. The scientific assessment further allowed us to identify challenges implementing both governing forms, as well as institutional and legislative obstacles. It also highlighted power relationships between actors and issues of social justice and equity at stake. / Ce chapitre présente une synthèse des résultats scientifiques portant sur les enjeux de gouvernance de la biodiversité dans les socio-écosystèmes de la Région Nouvelle-Aquitaine traités dans le rapport d'Ecobiose. Ces enjeux concernent la réconciliation, voire l'intégration, de la gouvernance de la conservation de la biodiversité avec la gouvernance de la production (d'alimentation, d'énergie, de bois...) et de la fourniture d'un ensemble plus large de services écosystémiques. Après une brève présentation des contextes respectifs pour chaque socio-écosystème, cette synthèse permet d'identifier deux principaux modes de gouvernance pour réaliser une convergence d'objectifs et de moyens institutionnels : i) une forme de gouvernance « réformiste » dans le cadre de laquelle des instruments de politique publique sectoriels sont adaptés aux enjeux de la biodiversité; et ii) une forme de gouvernance « transformative » qui tend à prôner la mise en place des « approches écosystémiques ». Ce deuxième type d'approche, holistique, peut être mis en place de façon « ascendante » ou « descendante », dans des contextes divergents selon les socio-écosystèmes. Cette synthèse identifie les défis à surmonter dans le contexte de gouvernance actuel pour chacun de ces deux modes d'intervention et les blocages institutionnels et législatifs, les rapports de force en jeu et les questions d'équité et de justice sociale impliqués.},
   keywords = {BIODIVERSITE ; GOUVERNANCE ; TRANSFORMATION ; GESTION PARTICIPATIVE}
   keywords = {biodiversity ; governance ; participative management}
}

@inproceedings{PUB00064187,
   note = {Communication scientifique sans actes},
   author = {Banos, V. and Bouet, B. and Deuffic, P.},
   title = {De l'Éden à l'hot spot : une saga forestière du  déclinisme environnemental à La Réunion},
   bookTitle = {Journée d'étude du Groupe d'Histoire des Forêts Françaises (GHFF) Mobilisations et conflits forestiers, 25/01/2020-25/01/2020, Paris, FRA},
   url = {http://irsteadoc.irstea.fr/cemoa/PUB00064187},
   year = {2020},
   affiliation = {INRAE BORDEAUX UR ETBX FRA ; INRAE BORDEAUX UR ETBX FRA ; INRAE BORDEAUX UR ETBX FRA},
   abstract = {Cette communication questionne l'origine forestière d'un récit fondateur et controversé du Parc National de la Réunion, celui d'une conservation d'une nature pré-anthropique menacée. L'hypothèse est que ce récit n'est pas seulement le fruit des enjeux contemporains de la biodiversité et de l'endémisme, mais plonge ses racines dans l'Histoire même de l'île de la Réunion et de son domaine forestier (85 % de la superficie du Parc National).  Mobilisant diverses sources dont des archives encore peu explorées, notre enquête  montre que les théories du « déclin environnemental » (Davis, 2012) ont accompagné et souvent justifié la gestion des espaces forestiers réunionnais depuis la fin du 18e siècle. Elle souligne la profonde conflictualité de ces récits, leur sédimentation sur le temps long et leur rôle structurant dans l'aménagement du territoire avec une concentration des frictions et des enjeux environnementaux sur les Hauts de l'île (Bonniol et Benoist, 1994). Pour autant, on observe des fluctuations dans la définition même du « déclin environnemental », les causes incriminées et les réponses apportées. Révélatrices de l'évolution des rapports Homme/environnement, les diverses solutions imaginées mettent aussi en lumière des alliances conflictuelles et différentes manières de combiner production et protection de la forêt. En s'intéressant à une histoire forestière encore peu étudiée (Germanaz, 2013), ce travail apporte ainsi sa contribution au débat sur  les confrontations, les coalitions et les expériences novatrices menées au nom du déclin environnemental (Decocq et al., 2016 ; Grove, 2013 ;  Pouchepadass, 1993 ; Thomas, 2009).},
   keywords = {ENVIRONNEMENT ; FORET ; CONFLIT D'ACTEUR ; INEGALITE ENVIRONNEMENTALE ; AMENAGEMENT}
   keywords = {environment ; forests ; environmental inequality}
}


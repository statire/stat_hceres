@inproceedings{PUB00064144,
   note = {Communication scientifique avec actes},
   author = {Deuffic, P. and Banos, V.},
   title = {After the catastrophe. Turning off or speeding up? French forest owners coping with climatic extreme events },
   bookTitle = {XXV IUFRO World Congress, 09/09/2019-05/10/2019, Curitiba, BRA},
   pages = {4},
   url = {http://irsteadoc.irstea.fr/cemoa/PUB00064144},
   year = {2019},
   affiliation = {IRSTEA BORDEAUX UR ETBX FRA ; IRSTEA BORDEAUX UR ETBX FRA},
   abstract = {Although climatic catastrophes are scrutinized for a long time, their impacts on change of practices by forest owners remain ambiguous. For some researchers, extreme events act as a window of opportunity which induces major changes. On the opposite others observe, after the initial trauma, a return to routines. Our contribution aims to question if socio-ecological memory of past extreme weather events guides future conducts and induce changes in forest management. Based on two catastrophes (a severe drought in 2003 and a windstorm in 2009 in France), we assume extreme events do not entail disruption, nor status quo but a so-called 'assisted deviation'. Our analysis shows that strategies range from a return to routine to an acceleration of changes in forest practices. On one hand the lack of social memory affects the capacity to learn from experience and contributes to modest changes of practices also induced by a loss of economic flexibility. On the other hand, major changes of practices are often encouraged by economic and cognitive capability to implement new forest practices but also by a vivid memory of past catastrophes and lessons learnt from their recurrence. However, the ecosystem memory and the forest sector economic legacy and structure may lead to two very different adaptive strategies: the intensification of past practices based on resistance of ecosystem or the introduction of innovative practices based on resilience. Finally, we suggest catastrophes should are not only risks for the future but also experience which test the relevance and efficiency of adaptive strategies.},
   keywords = {CHANGEMENT CLIMATIQUE ; PROPRIETAIRE FORESTIER ; PRATIQUE AGRICOLE}
   keywords = {climatic change ; forest owner ; agricultural practices}
}

@inproceedings{PUB00064146,
   note = {Communication scientifique sans actes},
   author = {Macary, F. and Boutet, A.C. and Uny, D. and Petit, K.},
   title = {Pestipond - Création d'une typologie des retenues d'eau par une méthode multicritère},
   bookTitle = {Séminaire scientifique du projet Pestipond, 03/10/2019-04/10/2019, Nangis, FRA},
   pages = {20},
   url = {http://irsteadoc.irstea.fr/cemoa/PUB00064146},
   year = {2019},
   affiliation = {IRSTEA BORDEAUX UR ETBX FRA ; IRSTEA BORDEAUX UR ETBX FRA ; IRSTEA BORDEAUX UR ETBX FRA ; IRSTEA BORDEAUX UR ETBX FRA},
   abstract = {As part of the Pestipond project, we carried out a bibliographic search on the different typologies applied to ponds in different forms (hill reservoirs, storm reservoirs, wetlands, small natural ponds ...). These various works generally integrated these natural or anthropogenic reservoirs without relation to the agricultural activity on the slopes. We have therefore chosen to retain certain criteria and have added others to reflect anthropogenic activity. We thus used a multi-criteria method (ELECTRE Tri-C) to establish this typology according to the level of performance of ponds to retain pesticides in watersheds first, before knowing their level of degradation. / Dans le cadre du projet Pestipond, nous avons réalisé une recherche bibliographique sur les différentes typologies appliquées à des retenues d'eau sous différentes formes (retenues collinaires, retenues d'orage, zones humides, étangs...). Ces différents travaux ont généralement intégré ces retenues naturels ou anthropiques sans relation avec l'activité agricole sur les versants. Nous avons ainsi choisi de retenir certains critères et en avons rajouté d'autres pour traduire l'activité anthropique. Nous avons ainsi utilisé une méthode multicritère (ELECTRE Tri-C) pour établir cette typologie suivant le niveau de performances de retenues pour retenir les pesticides aux sein des bassins versants dans un premier temps, avant connaissance de leur niveau de dégradation. },
   keywords = {BIBLIOGRAPHIE ; TYPOLOGIE ; RETENUE D'EAU ; RETENUE COLLINAIRE ; ZONE HUMIDE ; AGRICULTURE ; MODELISATION}
   keywords = {bibliographies ; typology ; humid zones ; agriculture ; modelling}
}

@book{PUB00064152,
   note = {Chapitre d'ouvrage scientifique},
   author = {Terreaux, J.P. and Lescot, J.M.},
   author = {Chandrasekaran P.T.},
   title = {Economic instruments to combat eutrophication: a survey},
   bookTitle = {Water and Sustainability},
   address = {London, UK},
   publisher = {IntechOpen},
   pages = {95-112},
   url = {http://irsteadoc.irstea.fr/cemoa/PUB00064152 / https://www.intechopen.com/books/water-and-sustainability/economic-instruments-to-combat-eutrophication-a-survey},
   doi = {http://dx.doi.org/10.5772/intechopen.79666},
   year = {2019},
   affiliation = {IRSTEA BORDEAUX UR ETBX FRA ; IRSTEA BORDEAUX UR ETBX FRA},
   abstract = {Eutrophication of aquatic ecosystems is a functional process triggered by excessive nutrient inputs into water courses. It causes disruption to ecosystems, with impacts on associated goods and services, which therefore might not be provided in a sustainable way. These impacts have served to politicize the issue in recent years. In this chapter, we present the main lessons learned from an international literature review on the economic aspects of eutrophication. This study aims to help public decision making in the reduction of this water pollution. By analyzing past experiences and the results of recent modelling work, it allows to avoid a number of pitfalls and focus on efficient solutions / L'eutrophisation des écosystèmes aquatiques est un processus fonctionnel déclenché par un apport excessif de nutriments dans les cours d'eau. Elle provoque une perturbation des écosystèmes, avec des impacts sur les biens et services associés, qui pourraient donc ne pas être fournis de manière durable. Ces impacts ont servi à politiser la question au cours des dernières années. Dans ce chapitre, nous présentons les principaux enseignements tirés d'une revue de la littérature internationale sur les aspects économiques de l'eutrophisation. Cette étude vise à aider la prise de décision publique pour la réduction de cette pollution de l'eau. En analysant les expériences passées et les résultats des récents travaux de modélisation, elle permet d'éviter un certain nombre d'écueils et de se concentrer sur des solutions efficaces},
   keywords = {EUTROPHISATION ; ECONOMIE ; POLLUTION ; DYNAMIQUE ; EFFICACITE ; ANALYSE ECONOMIQUE}
   keywords = {eutrophication ; economics ; pollution ; efficiency ; economic analysis}
}

@inproceedings{PUB00064174,
   note = {Communication scientifique sans actes},
   author = {Banos, V. and Brahic, E. and Deuffic, P. and Latimier, A-C.},
   title = {Entre mobilisation et modération : les forestiers face aux ambiguïtés de la bioéconomie},
   bookTitle = {SFER 2019. La bioéconomie : Organisation, Innovation, Soutenabilité et Territoire, 04/06/2019-05/06/2019, Reims, FRA},
   url = {http://irsteadoc.irstea.fr/cemoa/PUB00064174},
   year = {2019},
   affiliation = {IRSTEA BORDEAUX UR ETBX FRA ; IRSTEA BORDEAUX UR ETBX FRA ; IRSTEA BORDEAUX UR ETBX FRA ; IRSTEA BORDEAUX UR ETBX FRA},
   abstract = {Cette communication questionne l'effet des dispositifs de soutien à une mobilisation accrue de la biomasse sur les pratiques sylvicoles des propriétaires privés. Confrontés à des problèmes structurels, nous nous demandons si ces derniers se montrent sensibles à la convergence attendue des objectifs économiques et environnementaux portée par la bioéconomie. Pour éprouver ce questionnement, nous croisons la théorie des pratiques et celle des innovations sociotechniques. Se plaçant à un niveau « méso » du social, ces corpus abordent la problématique du changement de manière complémentaire. Tandis que la théorie des pratiques questionne la manière dont des acteurs réceptionnent de nouvelles pratiques, les approches sociotechniques se focalisent sur le travail d'enrôlement effectué par les  prescripteurs. Cette discussion analytique s'appuie sur deux cas d'études. Le premier s'intéresse aux comportements des propriétaires de la forêt des Landes de Gascogne face à l'essor des marchés du bois-énergie et la demande de mobilisation des souches du pin maritime. Le deuxième cas questionne la manière dont un programme d'action visant à mobiliser de la biomasse en améliorant des peuplements dépérissant affecte les pratiques sylvicoles dans une zone forestière « sous-exploitée ». La méthodologie conjugue enquête qualitative auprès d'acteurs de la filière et enquête quantitative auprès d'un échantillon de propriétaires. Nos recherches montrent que si certains propriétaires adaptent leurs pratiques, ils ne le font pas nécessairement au nom de la transition énergétique et écologique. De plus, alors que l'offre sylvicole converge vers des scénarios d'intensification, les propriétaires privilégient des options moins radicales. Longtemps perçue comme une preuve de frilosité, cette résistance au changement pourrait finalement contribuer à inscrire la bio-économie dans une trajectoire soutenable},
   keywords = {FORET ; PROPRIETAIRE FORESTIER ; BIOECONOMIE ; BIOMASSE}
   keywords = {forests ; forest owner ; bioeconomy ; biomass}
}


}

@inproceedings{PUB00064095,
   note = {Communication scientifique sans actes},
   author = {Deuerlein, J. and Piller, O. and Elhay, S. and Simpson, A.},
   title = {Extended flow control in large pressure dependent demand models},
   bookTitle = {17th International Computing & Control for the Water Industry Conference, 04/09/2019-04/09/2019, Exeter, GBR},
   pages = {2},
   url = {http://irsteadoc.irstea.fr/cemoa/PUB00064095 / https://www.researchgate.net/publication/335716252_Extended_flow_control_in_large_pressure_dependent_demand_models},
   year = {2019},
   affiliation = {3S CONSULT DEU ; IRSTEA BORDEAUX UR ETBX FRA ; UNIVERSITY OF ADELAIDE AUS ; UNIVERSITY OF ADELAIDE AUS},
   abstract = {Flow control is an important tool for providing an adequate volume of water to all the consumers, especially in the case when natural resources are limited. In real systems different kinds of flow control devices can be distinguished. One of the simplest is the tap control, where the outflow can be directly adjusted by the user. More sophisticated devices are normally used by water supply companies in order to control the flow within the pipe system. Here, the feedback loop is between a flow measuring sensor and the state of the control valve. Using such flow control devices, it is possible to limit the flow through the pipe to a justifiable threshold. Flow control is an important measure providing at least a limited water supply to the entire population, especially in regions that suffer from water scarcity where the demand is higher than the available resources. Thus, flow control could, in combination with proper rehabilitation of leaking pipes, replace the current wide-spread occurrence of intermittent water supply, which poses a high risk for human health (contaminant intrusion due to regular emptying of pipes) as well as the physical state of the system (transients, water hammer). Hydraulic simulation models are invaluable tools for proper planning of distribution network design. The difficulties that result from the presence of control devices in hydraulic simulation models are well reported in the literature. One prominent problem arises from the fact that mathematically flow control devices add inequality constraints to the hydraulic system equations. For example, the hydraulic steady-state can be formulated as the minimum of the convex Content function. Considering flow control devices, the unconstrained nonlinear optimization problem is replaced by a constrained nonlinear optimization problem where the flow control is represented by box constraints for the link flow. As has been previously shown [1] in demand driven analysis, the existence of a feasible flow distribution can be guaranteed if the links with flow control are part of the cotree. If this condition does not hold the non-emptiness of the feasible set can be proved by solving an LP-problem. In the more realistic case of pressure dependent modelling [2, 3], the constrained problem always has a solution if 1.) the consumer behaviour is modelled by pressure dependent demands and 2.) the general box constraints for links with flow control include the point 0. In the first part of this paper, the methods that are used to check the existence of a feasible flow distribution are discussed with respect to their applicability for large networks. Even in the case where the existence of a solution has been proved, the iterative active set method for calculation of the hydraulic steady-state may fail to converge. This is often caused by the linear dependency of the active link flow constraints of and nodal outflow constraints. In the second part of the paper a method for avoiding such linear dependence is presented and discussed with respect to its applicability to large networks. If the pressure deficiency is great, possibly due by large failures such as massive pipe bursts or failure of pumping stations, entire subregions of the network may be without supply. In such cases, there often exists, mathematically speaking, degenerate solutions where the Lagrangian multipliers of the active constraints and the constraints themselves are zero. This paper presents examples for large networks with extensive flow controls as well as proposals on how to deal with such cases numerically.},
   keywords = {MODELISATION ; CONTROLE DE FLUX}
   keywords = {modelling}
}

@phdthesis{PUB00064126,
   note = {Mémoire d'élève},
   author = {Guerendel, F.},
   title = {Etude bibliographique en vue de contribuer à la création de scénarios de systèmes innovants de production viticole dans le cadre de la transition agro-écologique, dans le bordelais},
   publisher = {Stage Master 1, Université de Bordeaux},
   pages = {21},
   url = {http://irsteadoc.irstea.fr/cemoa/PUB00064126},
   year = {2019},
   affiliation = {IRSTEA BORDEAUX UR ETBX FRA},
   abstract = {Viticulture is a sector which experiences a significant use of phytosanitary products, even in organic farming, with the use of copper. The PhytoCOTE project, which ends at the end of 2019, aims to describe the phytosanitary management methods and viticultural practices of the operators of Blayais. The final objective of the PhytoCOTE project is to deliver scenarios for the evolution of viticultural practices respectful of the environment, while ensuring economic viability. These scenarios can then be used by farmers and public actors to help set up agroecological practices on farms. The approaches to the scenarios are based both on field observations that were made at the start of the project, and are continuously amended by practices found on other farms. The final realization of these scenarios lacked a bibliographic work on the agroecological approaches undertaken at the global level, and more particularly in the countries of the South. In order to feed these scenarios, I therefore took on this mission. So I started looking for scientific articles and books relating to agroecological practices or agricultural innovations that could lend themselves to this approach. I did a job of creating a database, as well as a job of synthesizing the information that I found. Since agroecology is still a relatively recent field, I have found the majority of bibliographic articles communicating on the definition of agroecology, its history and its main lines. However, I found other articles explaining a link between agriculture and respect for biodiversity and the environment, without directly citing agroecology. By comparing what I found with the good wine-making practices of the scenarios, I could not find new elements to bring. However, this work validates the importance of integrating good practices that are both respectful of the environment and society in the evolution scenarios of the PhytoCOTE project / La viticulture est un secteur qui connaît une utilisation de produits phytosanitaires importante, et ce, même en agriculture biologique, avec l'utilisation du cuivre. Le projet PhytoCOTE, qui se termine à la fin de l'année 2019, a pour objectif de décrire les modes de gestion phytosanitaire et pratiques viticoles des exploitants du Blayais. L'objectif final du projet PhytoCOTE est de délivrer des scénarios d'évolution des pratiques viticoles respectueuses  de l'environnement, tout en assurant une viabilité économique.  Ces scénarios pourront être utilisés par la suite par les  agriculteurs  et les acteurs publics afin d'aider à la mise en place de pratiques agroécologiques sur les exploitations. Les démarches des scénarios se basent à la fois sur des observations de terrain qui ont été faites en début de projet, et sont continuellement amendées par des pratiques se trouvant sur d'autres exploitations. Il manquait à la réalisation finale de ces scénarios un travail bibliographique sur les démarches agroécologiques entreprises au niveau global, et plus particulièrement dans les pays du Sud. Afin d'alimenter ces scénarios, je me suis donc chargée de cette mission. J'ai donc entrepris la recherche d'articles scientifiques et de livres relatant des pratiques agroécologiques ou des innovations agricoles pouvant se prêter à cette démarche. J'ai effectué un travail de création de base de données, ainsi qu'un travail de  synthèse des informations que j'ai trouvé. L'agroécologie  étant un domaine encore relativement récent,  j'ai trouvé en majorité des articles à caractère bibliographique communiquant sur la définition de l'agroécologie, son histoire et ses grands axes. J'ai cependant trouvé d'autres articles explicitant un lien entre agriculture et respect de la biodiversité et de l'environnement, sans directement citer l'agroécologie. En comparant ce que j'ai trouvé avec les bonnes pratiques viticoles des scénarios, je n'ai pas pu trouver d'éléments nouveaux  à apporter. Cependant, ce travail valide l'importance d'intégrer de bonnes pratiques à la fois respectueuses de l'environnement et de la société dans les scénarios d'évolution du projet PhytoCOTE},
   keywords = {AGROECOLOGIE ; AGROFORESTERIE ; BIODIVERSITE ; SERVICE ECOSYSTEMIQUE ; PRATIQUE AGRICOLE}
   keywords = {agroecology ; agroforestry ; biodiversity ; ecosystem service ; agricultural practices}
}

@techreport{PUB00064128,
   note = {Rapport scientifique},
   author = {Aouadi, N. and Macary, F.},
   title = {Évaluation de l'impact des pratiques viticoles en matière de protection des plantes sur les écosystèmes connexes et de la capacité à les changer },
   pages = {25},
   url = {http://irsteadoc.irstea.fr/cemoa/PUB00064128},
   year = {2019},
   affiliation = {IRSTEA BORDEAUX UR ETBX FRA ; IRSTEA BORDEAUX UR ETBX FRA},
   abstract = {This report was written as part of Nawel Aouadi's post-doc on the PhytoCOTE project which was launched in 2015 for a period of five years with the financial support of the LabEx COTE of the University of Bordeaux and the Regional Council of the New Aquitaine. This project is an offshoot of the "Pesticides" group of the LabEx COTE of the University of Bordeaux. Its objective is to implement research work in an original approach to integration, relating to the use of pesticides in agrosystems especially in viticulture, their transfers and impacts in related ecosystems, as well as the evaluation of effects of changes in practices by modeling different scenarios. The multiple scientific approaches of this project justify a multidisciplinary intervention (agronomy, environmental chemistry, hydrobiology, ecology, ecotoxicology, socio-economics). The objective of the work at first, was to make a diagnosis of the existing wine systems in the study area, to identify the systems allowing to reconcile economic and environmental performance and to identify the possible room for maneuver for the change. of practices. Secondly, it was envisaged to design 'innovative' wine systems which coherently combine 'good wine and environmental practices' and to assess the consequences of the adoption of these systems mainly in the study area, the objective being to reduce the use of pesticides while maintaining satisfactory economic profitability, taking into account the characteristics of the environment and technical and socio-economic constraints / Ce rapport a été rédigé dans le cadre du post-doc de Nawel Aouadi sur le projet PhytoCOTE qui a été lancé en 2015 pour une période de cinq ans avec le soutien financier du LabEx COTE de l'Université de Bordeaux et du Conseil régional de la Nouvelle Aquitaine. Ce projet est une émanation du groupe "Pesticides" du LabEx COTE de l'Université de Bordeaux. Il a pour objectif de mettre en oeuvre des travaux de recherche dans une démarche originale d'intégration, relatifs à l'usage des pesticides dans les agrosystèmes notamment en viticulture, à leurs transferts et impacts dans les écosystèmes connexes, ainsi que l'évaluation des effets de changements de pratiques par modélisation de différents scenarii. Les multiples approches scientifiques de ce projet justifient une intervention pluridisciplinaire (agronomie, chimie environnementale, hydrobiologie, écologie, écotoxicologie, socio-économie).  L'objectif du travail dans un premier temps, était de faire un diagnostic des systèmes viticoles existants dans la zone d'étude, d'identifier les systèmes permettant de concilier performance économique et environnementale et d'identifier les marges de manoeuvre possible pour le changement de pratiques. Dans un deuxième temps,  il était envisagé de concevoir des systèmes viticoles 'innovants' qui combinent de façon cohérente les 'bonnes pratiques viticoles et environnementales' et d'évaluer les conséquences de l'adoption de ces systèmes dans le bassin d'étude principalement ; l'objectif étant de réduire le recours aux pesticides tout en maintenant une rentabilité économique satisfaisante, en tenant compte des caractéristiques du milieu et des contraintes techniques et socio-économiques},
   keywords = {PESTICIDE ; PRODUIT PHYTOSANITAIRE ; PRATIQUE AGRICOLE ; VITICULTURE ; AGROECOLOGIE ; PROTECTION DES PLANTES}
   keywords = {pesticides ; plant protection product ; agricultural practices ; viticulture ; agroecology ; plant protection}
}

@phdthesis{PUB00064129,
   note = {Mémoire d'élève},
   author = {Boutet, A.C.},
   title = {Évaluation de la contribution des parcelles agricoles de petits bassins versants au risque de transfert des produits phytosanitaires vers les eaux de surface par analyse multicritère : bassin versant expérimental d'Auradé},
   publisher = {Ingénieur agronome, Bordeaux Sciences Agro},
   pages = {93},
   url = {http://irsteadoc.irstea.fr/cemoa/PUB00064129},
   year = {2019},
   affiliation = {IRSTEA BORDEAUX UR ETBX FRA},
   abstract = {The ANR PESTIPOND Fundamental Research Project (2019-2023) focuses on the study of the role of agricultural water bodies (ponds, wetlands ...) in the transfer and the future of pesticides at the watershed scale (cycle, storage, transformation ...). One of the project's tasks, coordinated by F. Macary at Irstea-Bordeaux plan to assess the contribution of each plot of three experimental watersheds to the risks of pesticide transfers to surface waters. The objective of the work presented in this brief will detail the case of the Auradé watershed in the Gers. With the multi-criteria decision analysis, Electre Tri-C, coupled with a GIS, each watershed's parcel was assigned to one of the five risk categories associated with surface water contamination by pesticides. The six qualitative and quantitative criteria selected make it possible to assess the vulnerability of the environment (topography, soil, connectivity to rivers), the obstacles to the transfer by vegetated system (riparian buffer, agricultural buffer strips) and finally the pesticide pressure. Molecular behaviour was distinguished between soluble and insoluble pesticides. Furthermore, the effectiveness of good environmental practices was simulated on the watershed with a scenario without riparian buffer and without grass strip and a scenario with maximum riparian buffer and grass strips. The transfer risk is represented in map at the parcel scale in the Auradé watershed for both molecular behaviours and for both scenarii. The importance of vegetated protection elements in pesticide transfer has been demonstrated. The need to maintain these system significantly reduces the transfer even if does not totally remove it; this especially since the crop rotation is essentially binary: wheat-sunflower and the erosive risk is very important throughout the BVE / Le projet de recherche fondamental ANR-PESTIPOND (2019-2023) porte sur l'étude du rôle des plans d'eau agricoles (étangs, retenues artificielles ou non, zones humides ...) dans le transfert et le devenir des pesticides à l'échelle du bassin versant (cycle, stockage, transformation ...). Une des tâches du projet, cordonnée par F. Macary à Irstea-Bordeaux prévoit d'évaluer la contribution de chaque parcelle agricole de trois bassins versants expérimentaux (BVE) aux risques de transferts des pesticides vers les eaux de surface. L'objectif du travail présenté dans ce mémoire détaillera le cas du bassin versant expérimental d'Auradé dans le Gers.  Avec le modèle multicritère d'aide à la décision Electre Tri-C, couplé à un SIG, chaque parcelle du BVE s'est vue affectée à une des cinq catégories de risque prédéfinies associé à la contamination des eaux de surface par les produits phytosanitaires. Les six critères qualitatifs et quantitatifs retenus permettent d'évaluer la vulnérabilité du milieu (topographie, sol, connectivité aux cours d'eau), les freins au transfert par les dispositifs végétalisés (ripisylve, bandes tampons agricoles) et enfin la pression phytosanitaire de chaque parcelle. La distinction de comportements moléculaires a été faite entre les produits phytosanitaires solubles et insolubles. Par ailleurs, l'efficacité des bonnes pratiques environnementales a été simulée sur le BVE avec un scénario sans ripisylve et sans bande enherbée et un scénario avec une ripisylve et des bandes enherbées maximales.  Le risque de transfert est représenté sous forme cartographique à l'échelle parcellaire du BVE pour les deux comportements moléculaires et pour les deux simulations.  L'importance des éléments de protection végétalisée dans le transfert des pesticides a été démontrée. La nécessité de conserver en bon état et entretenir ces dispositifs permet d'atténuer de façon significative le transfert sans toutefois le supprimer, ce d'autant que la rotation culturale est essentiellement binaire : blé-tournesol et que le risque érosif est très important sur tout le BVE},
   keywords = {AIDE A LA DECISION ; ANALYSE MULTICRITERE ; BASSIN VERSANT ; EVALUATION DU RISQUE ; PRODUIT PHYTOSANITAIRE ; PESTICIDE ; AGROENVIRONNEMENT ; PRATIQUE AGRICOLE}
   keywords = {decision support ; multicriteria analysis ; watersheds ; plant protection product ; pesticides ; agricultural practices}
}

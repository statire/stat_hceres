   title = {Assessing residents' preferences for sewer network asset management in France},
   bookTitle = {7th IWA Leading-Edge Conference on Strategic Asset Management of water and wastewater infrastructures (LESAM), 20/06/2017-22/06/2017, Trondheim, NOR},
   publisher = {IWA},

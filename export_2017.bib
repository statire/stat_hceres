   url = {http://irsteadoc.irstea.fr/cemoa/PUB00057580 / http://agronomie.asso.fr/carrefour-inter-professionnel/evenements-de-lafa/revue-en-ligne/revue-aes-vol7-n2-decembre-2017-les-ateliers-terrain-pour-une-demarche-participative-en-agronomie-clinique/revue-aes-vol7-n2-12/},

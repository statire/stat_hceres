@article{PUB00055293,
   note = {Article de revue scientifique à comité de lecture},
   author = {Ayala Cabrera, D. and Piller, O. and Deuerlein, J. and Herrera, M.},
   title = {Towards resilient water networks by using resilience key performance indicators},
   journal = {European Water},

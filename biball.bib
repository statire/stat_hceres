   author = {Agossou, G. and Gbehounou, G. and Zahm, F. and Agbossou, E.K.},
   title = {Adaptation of the Indicateurs de Durabilite des Exploitations Agricoles (IDEA)” method for assessing sustainability of farms in the lower valley of Ouémé River in the Republic of Benin},

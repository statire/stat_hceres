@book{PUB00060536,
   note = {Ouvrage de vulgarisation},
   author = {Bouleau, G.},
   author = {Bouleau, G.},
   title = {Manuel d'analyse des politiques publiques à l'usage des ingénieurs et des urbanistes. Exemples dans le domaine de l'eau et de l'environnement},
   series = {Livres ponts et chaussées},
   address = {Paris},
   publisher = {Presses de l'Ecole Nationale des Ponts et Chaussées},
   pages = {124},
   url = {http://irsteadoc.irstea.fr/cemoa/PUB00060536},
   year = {2019},
   affiliation = {IRSTEA BORDEAUX UR ETBX FRA},
   ISBN/ISSN = {ISBN 978-2859785239},
   abstract = {Qui est le public concerné par un aménagement ? Peut-on en présenter les enjeux sans les politiser ?  Est-ce que les non-experts sont légitimes sur les sujets techniques ? Pourquoi certains discours portent plus que d'autres ? Qu'est-ce qui fait le succès d'une décision ? Les ingénieurs et les urbanistes qui ont affaire à des décisions publiques expriment souvent le besoin d'être accompagnés dans leur réflexivité pour comprendre ce qu'il se joue au niveau politique et comment ils interviennent eux-mêmes dans ce contexte. Ce manuel leur est destiné. Il offre des clés d'analyse sur la construction des problèmes publics, la conception, l'adoption et la mise en oeuvre des politiques publiques en France. La sociologie de l'action publique est expliquée ici de manière simple et mise en contexte par de nombreux exemples pris dans le domaine de l'eau et de l'environnement. Face à l'émergence de contestations ou de controverses, les porteurs de projets techniques se tournent parfois vers les sociologues pour que ceux-ci les aident à construire de l'acceptabilité sociale. Les spécialistes en sciences sociales répondent souvent que le problème est mal posé. Mais pour mieux le poser, il faut que chacun fasse un pas vers l'autre. Cet ouvrage est une porte d'entrée sur la science politique pour des non spécialistes. Il se concentre sur quelques notions utiles pour construire un dialogue entre savoirs techniques et sciences sociales. Les concepts présentés sont repris dans un glossaire avec des définitions courtes et des ouvrages de références pour d'éventuels approfondissements. 
 L'ouvrage commence avec une petite fiction intitulée « mésaventures de la rivière du Tempétueux » pour illustrer l'imbrication du technique et du politique dans le champ de la gestion de l'eau à partir de situations très concrètes qui plantent le décor. « Les acteurs des politiques publiques et leurs contextes d'intervention » fait le point sur différents courants d'analyse des politiques publiques qui font des hypothèses contrastées sur ce qui motive les acteurs et la manière dont ils sont influencés ou non par des structures sociales. L'« analyse séquentielle de la construction  des politiques publiques » passe ensuite en revue différents moments clés des politiques où se jouent l'identification du public concerné, la définition des problèmes, leur traduction en enjeux politiques, les discours qui les justifient et le timing de leur décision. « Les modèles de l'action publique » étudient la diffusion et l'évolution de manières génériques de construire les politiques. Il existe en effet des traditions différentes de construire le bien commun, les corpus normatifs spécifiques à certains secteurs d'action publique (paradigmes, référentiels) et des modèles qui transcendent les secteurs (doctrines). « La mise en oeuvre des politiques » souligne l'écart qu'il peut y avoir entre le texte et la mise en pratique. Ce chapitre explique en quoi le local peut être source de résistance ou d'inspiration. Le dernier chapitre « les organisations politiques et leurs responsabilités juridiques : exemple de la gestion de l'eau » est une aide au repérage dans le millefeuille administratif français de la gestion de l'eau.},
   keywords = {EAU ; ENVIRONNEMENT ; POLITIQUE PUBLIQUE ; AIDE A LA DECISION ; SOCIOLOGIE ; ACCEPTABILITE SOCIALE}
   keywords = {water ; environment ; public policy ; decision support ; sociology}
}

@inproceedings{PUB00062009,
   note = {Communication scientifique avec actes},
   author = {Leccia-Phelpin, O. and Andro, L.},
   title = {Assessing SWAT model performance using gridded SAFRAN/ CFSR and conventional weather station datasets at different hydrometeorological spatial and temporal resolutions: A case study on the 10,000 km² Charente river basin S-W France },
   bookTitle = {2019 Vienna SWAT Conference, 17/07/2019-19/07/2019, Vienna, AUS / Book of Abstracts},
   address = {Texas, USA},
   publisher = {The Texas A&M University System},
   pages = {7},
   url = {http://irsteadoc.irstea.fr/cemoa/PUB00062009 / https://swat.tamu.edu/conferences/2019-vienna/agenda/},
   year = {2019},
   affiliation = {IRSTEA BORDEAUX UR ETBX FRA ; -},
   abstract = {Forcing variables relating to the hydrologic response of rainfall runoff modeling are known to play a major role in accuracy of predictions made. In this study, three hydro-climatic daily time step datasets were tested: conventional weather stations, the 8km gridded SAFRAN, and the 0.5° CFSR included in the 10,550km² Charente river basin, South-Western France. Estimation of discharge and uncertainty analysis for stream ﬂow estimation was carried out using the Soil and Water Assessment Tool (SWAT). Multi-site calibration and parameter uncertainty analysis were performed with the Sequential Uncertainty domain parameter FItting algorithm (SUFI-2). The model was calibrated and validated by means of observed discharge data for the periods 1999 - 2008 and 2009 - 2018, respectively. The performance of the SWAT model regarding stream flows is evaluated based on five criteria: determination coeﬃcient R², NashSutcliﬀe eﬃciency (NSE), per cent bias (PBIAS), p-factor, and r-factor (calculated on a daily basis). During calibration, the values of R² and N SE were found to be 0.73 and 0.71. When validated, they were found to be 0.54 and 0.52. These ﬁndings, which are currently undergoing final analysis, show that calibration and validation performance were at their best with conventional weather station datasets for the gauged sub-basins, and that observed and simulated daily stream ﬂows were not much different at 95PPU (95% level of prediction uncertainty).},
   keywords = {METEOROLOGIE ; PERFORMANCE ; MODELISATION ; ANALYSE D'INCERTITUDE ; SENSIBILITE}
   keywords = {meteorology ; performance ; modelling ; uncertainty analysis ; sensitivity}
}

@article{PUB00059140,
   note = {Article de revue scientifique à comité de lecture},
   author = {Deuerlein, J. and Piller, O. and Elhay, S. and Simpson, A.},
   title = {A Content-Based Active Set Method for the Pressure Dependent Model of Water Distribution Systems},
   journal = {Journal of Water Resources Planning and Management},
   volume = {145},
   number = {1},
   pages = {26},
   url = {http://irsteadoc.irstea.fr/cemoa/PUB00059140},
   doi = {http://dx.doi.org/10.1061/(ASCE)WR.1943-5452.0001003},
   year = {2019},
   affiliation = {3S CONSULT GMBH KARLSRUHE DEU ; IRSTEA BORDEAUX UR ETBX FRA ; UNIVERSITY OF ADELAIDE ZAF ; UNIVERSITY OF ADELAIDE ZAF},
   abstract = {A new content-based, box-constrained, active-set projected Newton method is presented that solves for the heads, the pipe flows, and the nodal outflows of a water distribution system in which nodal outflows are pressure dependent. The new method is attractive because, by comparison with the previously published weighted least-squares energy and mass residuals (EMR) damped Newton method, (1) it typically takes fewer iterations, (2) it does not require damping, (3) it takes less wall-clock time, (4) it does not require the addition of any virtual elements, and (5) it is algorithmically easier to deal with. Various pressure-outflow relationships (PORs), which model nodal outflows, were considered and two new PORs are presented. The new method is shown, by application to eight previously published case study networks with up to about 20,000 pipes and 18,000 nodes, to be up to five times faster than the EMR method and to take between 34% and 70% fewer iterations than the EMR method.},
   keywords = {RESEAU DE DISTRIBUTION D'EAU ; RESEAU D'EAU POTABLE ; MESURE DE PRESSION ; PRESSION DES FLUIDES ; INDICATEUR DE DEBIT ; MODELE}
   keywords = {water distribution system ; drinking water systems ; models}
}

@article{PUB00059237,
   note = {Article de revue scientifique à comité de lecture},
   author = {Rey Valette, H. and Robert, S. and Rulleau, B.},
   title = {Resistance to relocation in flood-vulnerable coastal areas: a proposed composite index},
   journal = {Climate Policy},
   volume = {19},
   number = {2},
   pages = {206-2018},
   url = {http://irsteadoc.irstea.fr/cemoa/PUB00059237},

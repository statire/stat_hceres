@phdthesis{PUB00060046,
   note = {Mémoire d'élève},
   author = {Ivanovsky, V.},
   title = {Variations temporelles du bilan des prélèvements et des rejets d'un système d'eau potable},
   publisher = {Ingénieur  ENSE3 Grenoble},
   pages = {62},
   url = {http://irsteadoc.irstea.fr/cemoa/PUB00060046},
   year = {2018},
   affiliation = {IRSTEA BORDEAUX UR ETBX FRA},
   abstract = {One of the main issues of water loss reduction in drinking water supply networks is the water resources preservation, and especially the conservation of their quantitative state. In a growing ecological concerned context, the utilities responsible for drinking water network are required by the law Grenelle II (law n° 2010-788, 12th July 2010) to achieve a regulatory performance threshold. If this threshold is not achieved, the water utility has to set up an action plan to fight water loss. In order to help and induce a better water network and water resources management, the 36th action of the AFB - IRSTEA agreement main goal is the publication of a manual, whose targets are the drinking water utilities. In this manual is used a method called "Water abstraction and discharge balance", whose objective is to establish the real impact of a water network upon the mobilised resources. This graduation internship offers an improvement of the already existing method. The improvement focuses mainly on the temporal variations of discharges associated with the uses of water. This new method was established in an exploratory way, based on the study of several case studies. One of the biggest points of amelioration was the switching of the yearly timescale to a monthly one, which has required a certain amount of data and the processing of those, sometimes consequent. In addition, the evapotranspiration estimation in a simple way was studied in an attempt to seasonally qualify some of the end-uses and some of the rejects. Finally, results obtained with the already existing method and the improved one were contrasted, to establish and highlight effective improvements. / L'un des principaux enjeux de la réduction des pertes en réseau est la préservation des ressources en eau, et notamment le maintien de leur bon état quantitatif. Dans un contexte de préoccupation écologique grandissant, la loi Grenelle II (loi n° 2010-788 du 12 juillet 2010) impose aux instances responsables de l'alimentation d'eau potable un seuil minimum de rendement de réseau. S'il n'est pas atteint, l'instance doit mettre en place un plan de lutte contre les pertes. Afin d'aider à une meilleure gestion de ces réseaux et de l'eau en tant que ressource, l'action 36 de la convention AFB - IRSTEA a pour but la rédaction d'un guide à destination des instances de gestion d'eau potable. Dans ce guide intervient la méthode « Bilan eau », dont l'objectif est d'établir l'impact réel d'un SAEP (système d'alimentation d'eau potable) sur les ressources mobilisées. Ce stage de fin d'études propose une amélioration de la méthode déjà existante en ce qui concerne notamment les modes de rejet des usages de l'eau et leur répartition temporelle. La méthode a été établie de manière exploratoire sur plusieurs terrains d'études. Un des points majeurs d'amélioration est le passage à l'échelle infra-annuelle, ce qui a demandé l'accès à de nombreuses données et un traitement de ces dernières, parfois conséquent. Également, on s'est intéressé au développement d'une estimation simple de l'évapotranspiration sur un territoire, afin de pouvoir nuancer saisonnièrement certains rejets. Enfin, les résultats obtenus ont été comparé avec ceux de l'ancienne méthode afin d'établir les améliorations effectives de la dernière version du bilan eau.},
   keywords = {RESSOURCE EN EAU ; ALIMENTATION EN EAU ; EAU POTABLE ; PERTE ; GESTION DE L'EAU}
   keywords = {water supply ; drinking water ; losses ; water management}
}


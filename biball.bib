@article{PUB00061542,
   note = {Article de revue scientifique à comité de lecture},
   author = {Bello, O. and Abu Mahfouz, A.M. and Hamam, Y. and Page, P.R. and Adedeji, K.B. and Piller, O.},
   title = {Solving Management Problems in Water Distribution Networks: A Survey of Approaches and Mathematical Models},
   journal = {Water},
   volume = {11},
   number = {562},
   pages = {29},
   url = {http://irsteadoc.irstea.fr/cemoa/PUB00061542 / https://www.mdpi.com/2073-4441/11/3/562},

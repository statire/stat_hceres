@article{PUB00059784,
   note = {Article de revue technique à comité de lecture},
   author = {Husson, A. and Vacelet, A. and Stricker, A. E. and Bréjoux, E. and Renaud, E.},
   title = {Améliorer la connaissance des réseaux d'eau potable à l'échelle nationale : analyse des données disponibles},
   journal = {Techniques Sciences Méthodes},
   volume = {2018},
   number = {10},
   pages = {41-54},
   url = {http://irsteadoc.irstea.fr/cemoa/PUB00059784},
   doi = {http://dx.doi.org/10.1051/tsm/201810041},
   year = {2018},
   affiliation = {IRSTEA BORDEAUX UR ETBX FRA ; IRSTEA BORDEAUX UR ETBX FRA ; IRSTEA BORDEAUX UR ETBX FRA ; AGENCE FRANCAISE POUR LA BIODIVERSITE VINCENNES FRA ; IRSTEA BORDEAUX UR ETBX FRA},
   abstract = {The knowledge of the French drinking water infrastructure at national scale is currently fragmented. New French environmental regulation requires that water suppliers provide a detailed description of their networks. This new body of data provides an opportunity to improve the knowledge of networks, thereby improving the implementation and evaluation of drinking water asset management public policies. In this context, the French National Agency for Biodiversity instructed the National Institute for Environmental and Agricultural Science and Research (Irstea) to develop an ongoing management system for drinking water networks knowledge at both national and watershed level. The system will rely on statistical modelling of the network characteristics based on data from geographic information systems (GIS) provided by a sample of drinking water suppliers. This paper presents data collection and processing methods, as well as the first results and lessons learnt from the initial data analysis. The considered variables are the pipe lengths (excluding connection pipes) for each class of diameter, material and installation date. The first finding is that GIS data formatting is extremely uneven across water suppliers. Therefore, a standardization and data processing step was devised to allow subsequent merging of individual data sets. Preliminary data analysis reveals that pipe installation period is often unknown (one third of the total length), and that the level of asset knowledge differs strongly across the six main watersheds. Moreover, the known characteristics of water networks appear to be location-dependent as well. These findings will be helpful for upcoming statistical modelling endeavor, which will be based on geographical, demographical and urban planning input data that are available at municipal scale for the entire national territory. / En France, la connaissance à l'échelle nationale des réseaux d'eau potable est aujourd'hui parcellaire. L'obligation pour les services d'établir un descriptif détaillé des réseaux constitue une opportunité pour améliorer la connaissance des réseaux et ainsi favoriser la mise en oeuvre et l'évaluation des politiques publiques de gestion patrimoniale des réseaux d'eau potable. Dans ce contexte, l'Agence Française pour la Biodiversité a mandaté Irstea pour construire un dispositif permanent d'évaluation du patrimoine des réseaux d'eau potable aux échelles nationale et de bassin. Ce dispositif s'appuiera sur une modélisation statistique construite à partir des systèmes d'information géographique d'un échantillon de services des eaux. Cet article présente les méthodes de construction de l'échantillon et expose les premiers enseignements tirés de l'analyse de ces données. Les informations étudiées sont les longueurs de réseau (hors branchements particuliers) par diamètre, matériau et période de pose. Le premier constat est une très grande disparité des formes de représentation des données. Cela induit une étape de normalisation et de traitement des données, incontournable pour en rendre possible l'agglomération. Une première analyse des données montre une forte méconnaissance des périodes de pose (30% du linéaire) et, pour chacune des caractéristiques, des différences sensibles du niveau de connaissance entre les six grands bassins hydrographiques. Par ailleurs, de fortes disparités géographiques apparaissent dans la répartition des occurrences de chacune des variables. Ces premiers résultats seront valorisés dans la modélisation statistique à venir qui s'appuiera sur des données géographiques, démographiques et d'urbanisme, disponibles de façon exhaustive à l'échelle communale sur le territoire national.},
   keywords = {ALIMENTATION EN EAU ; SYSTEME D'INFORMATION GEOGRAPHIQUE ; EVALUATION PATRIMONIALE ; INVENTAIRE ; POLITIQUE PUBLIQUE}
   keywords = {water supply ; geographical information systems ; patrimonial management ; inventory ; public policy}
}

